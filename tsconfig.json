{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2020"],
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "exactOptionalPropertyTypes": true,
    "target": "es2020"
  },
  "exclude": ["projects/**/*"]
}
